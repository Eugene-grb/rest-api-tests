<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SMOKE">
    <test name="Smoke tests">
        <groups>
            <run>
                <include name="SMOKE" />
            </run>
        </groups>
        <classes>
            <class name="tests.StatusCodePositive" />
            <class name="tests.ValidateHeadersPositive"/>
            <class name="tests.ValidateResponsePositive"/>
        </classes>
    </test>
</suite>