<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="POST запрос /saveForm">
    <test name="Проверка всего запроса saveForm">
        <groups>
            <run>
                <include name="saveForm" />
            </run>
        </groups>
        <classes>
            <class name="tests.StatusCodePositive" />
            <class name="tests.ValidateHeadersPositive"/>
            <class name="tests.ValidateResponsePositive"/>
            <class name="tests.StatusCodeValidData"/>
            <class name="tests.CorrectLoadingValidData"/>
            <class name="tests.StatusCodeInvalidData"/>
            <class name="tests.CorrectLoadingInvalidData"/>
        </classes>
    </test>
</suite>