<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="POST запрос /saveForm">
    <test name="Проверка всего запроса saveForm">
        <groups>
            <run>
                <include name="saveForm" />
            </run>
        </groups>
        <classes>
            <class name="tests.positive.StatusCodePositive" />
            <class name="tests.positive.ValidateHeadersPositive"/>
            <class name="tests.positive.ValidateResponsePositive"/>
            <class name="tests.validData.StatusCodeValidData"/>
            <class name="tests.validData.CorrectLoadingValidData"/>
            <class name="tests.wrongData.StatusCodeWrongData"/>
            <class name="tests.wrongData.CorrectLoadingWrongData"/>
        </classes>
    </test>
</suite>